<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        app:boxBackgroundColor="#161616"
        app:boxStrokeColor="#E0B13F"
        app:boxStrokeWidth="1dp"
        android:hint=" "
        app:counterEnabled="true"
        app:counterTextColor="@color/hint_color"
        app:counterMaxLength="100"
        android:textColorHint="#9C9C9C"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add your title here"
            android:maxLength="100"
            android:textColorHint="@color/hint_color"
            android:textColor="@color/hint_color"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_body_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:hint=" "
        app:boxBackgroundColor="#161616"
        app:boxStrokeColor="#E0B13F"
        app:boxStrokeWidth="1dp"
        android:textColorHint="#9C9C9C"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_title_layout">
        <EditText
            android:id="@+id/et_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="What do you want to write here..."
            android:textColorHint="@color/hint_color"
            android:textColor="#9C9C9C"/>
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>