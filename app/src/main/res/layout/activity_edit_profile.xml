<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="32dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/UsernameInput_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="New Username"
        android:textColorHint="@color/hint_color"
        app:boxBackgroundColor="@color/mainbackground"
        app:boxStrokeColor="@color/mainyellow"
        app:boxStrokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/UsernameInput"
            android:textColor="@color/white_text"
            android:textSize="18sp"
            android:fontFamily="@font/opensansregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EmailInput_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="New Email"
        android:textColorHint="@color/hint_color"
        app:boxBackgroundColor="@color/mainbackground"
        app:boxStrokeColor="@color/mainyellow"
        app:boxStrokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/UsernameInput_layout">

        <EditText
            android:id="@+id/EmailInput"
            android:textColor="@color/white_text"
            android:textSize="18sp"
            android:fontFamily="@font/opensansregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/PasswordInput_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Password"
        android:textColorHint="@color/hint_color"
        app:boxBackgroundColor="@color/mainbackground"
        app:boxStrokeColor="@color/mainyellow"
        app:boxStrokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/EmailInput_layout">

        <EditText
            android:id="@+id/PasswordInput"
            android:textColor="@color/white_text"
            android:textSize="18sp"
            android:fontFamily="@font/opensansregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ConfirmPasswordInput_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Confirm Password"
        android:textColorHint="@color/hint_color"
        app:boxBackgroundColor="@color/mainbackground"
        app:boxStrokeColor="@color/mainyellow"
        app:boxStrokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/PasswordInput_layout">

        <EditText
            android:id="@+id/ConfirmPasswordInput"
            android:textColor="@color/white_text"
            android:textSize="18sp"
            android:fontFamily="@font/opensansregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/Savebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:background="@color/mainyellow"
        android:backgroundTint="@color/mtrl_textinput_default_box_stroke_color"
        android:text="Save"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>